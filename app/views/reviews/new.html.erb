
<h1 class="mt-4">New review</h1>

<%= simple_form_for [@restaurant, @review], html: { class: "mt-4" } do |f| %>
  <div class="form-group mt-2">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-2">
    <%= f.label :rating, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :rating, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= f.submit "Submit review", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
