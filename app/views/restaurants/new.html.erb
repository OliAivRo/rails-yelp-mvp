<h1>New restaurant</h1>

<div class="m-3">
<%= link_to 'Go back to all restaurants', restaurants_path, :class => "btn btn-primary" %>
</div>


<%= form_with model: @restaurant, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group mt-2">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-2">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-2">
    <%= f.label :phone_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-2">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :category, Restaurant.select("DISTINCT(category)"), :category, :category, { prompt: "Select Category" }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group mt-4">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
