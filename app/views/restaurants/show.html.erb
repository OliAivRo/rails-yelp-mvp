<div class="container mt-3">
  <%= link_to 'Go back to all restaurants', restaurants_path, class: "btn btn-primary mb-3" %>
  <div class="row">
    <div class="col-md-6">
      <h3 class="mb-3"><strong><%= @restaurant.name %> informations</strong></h3>
      <div class="card">
        <div class="d-flex align-items-center justify-content-center" style="height: 400px;">
          <img class="card-img-top" style="width:400px; height:400px; object-fit: cover;" src="https://source.unsplash.com/random/400x400/?food" alt="food">
        </div>
        <div class="card-body">
          <h5 class="card-title text-center"><%= @restaurant.name %></h5>
          <p class="card-text text-center"><%= @restaurant.category %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Address:</strong><br><%= @restaurant.address %></li>
            <li class="list-group-item"><strong>Phone number:</strong><br><%= @restaurant.phone_number %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="mb-3"><strong>Reviews</strong></h3>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %> <%= review.rating %>/5</li>
        <% end %>
      </ul>
      <div class="mt-3">
        <%= link_to 'Give a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
